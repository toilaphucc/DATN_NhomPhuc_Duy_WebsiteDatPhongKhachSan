@model IEnumerable<DATN_WebDatPhongKhachSan.Models.Owner>

@{
    ViewData["Title"] = "Danh mục điểm cho thuê";
    Layout = "~/Views/Shared/_layout_admin.cshtml";
}

<h1>Danh mục điểm cho thuê</h1>

<p>
    <a asp-action="Create">Thêm điểm cho thuê</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tài khoản
            </th>
            <th>
                Họ và tên
            </th>
            <th>
               Địa chỉ
            </th>
            <th>
                Loại hình kinh doanh
            </th>
            <th>
                Tên khách sạn
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
                Chỉnh sửa lần cuối
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address), @Html.DisplayFor(modelItem => item.Ward), 
                @Html.DisplayFor(modelItem => item.District), @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @if (item.IsHotel == true)
                {
                    <h6>Khách sạn</h6>
                }
                else
                {<h6>Phòng cho thuê</h6>}
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelName)
            </td>
            <td>
                @String.Format("{0:dd/MM/yyyy}", item.CreatedOn)
            </td>
            <td>
                @String.Format("{0:dd/MM/yyyy}", item.ModifiedOn)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OwnerID"> <i class="fas fa-edit">  ||    </i></a>
                <a asp-action="Details" asp-route-id="@item.OwnerID"><i class="fas fa-tasks"> ||    </i></a>
                <a asp-action="Delete" asp-route-id="@item.OwnerID"><i class="fas fa-window-close">    </i></a>
            </td>
        </tr>
}
    </tbody>
</table>
