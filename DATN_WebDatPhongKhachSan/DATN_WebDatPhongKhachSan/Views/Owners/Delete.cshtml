@model DATN_WebDatPhongKhachSan.Models.Owner

@{
    ViewData["Title"] = "Xoá điểm cho thuê";
    Layout = "~/Views/Shared/_layout_admin.cshtml";
}
<h3>Xoá thông tin điểm cho thuê sẽ xoá thông tin các phòng của điểm cho thuê đó.
    Bạn có chắc muốn xoá thông tin điểm cho thuê này không ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tài khoản 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd class>
        <dt class = "col-sm-2">
            Địa chỉ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address), @Html.DisplayFor(model => model.Ward),
            @Html.DisplayFor(model => model.District), @Html.DisplayFor(model => model.City)
        </dd>      
        <dt class = "col-sm-2">
            Loại hình kinh doanh
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsHotel == true)
            {
                <h6>Khách sạn</h6>
            }
            else
            {<h6>Phòng cho thuê</h6>}
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HotelName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HotelName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:dd/MM/yyyy}", Model.CreatedOn)
        </dd>
        <dt class = "col-sm-2">
            Chỉnh sửa lần cuối
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:dd/MM/yyyy}", Model.ModifiedOn)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="OwnerID" />
        <input type="submit" value="Xoá" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại</a>
    </form>
</div>
