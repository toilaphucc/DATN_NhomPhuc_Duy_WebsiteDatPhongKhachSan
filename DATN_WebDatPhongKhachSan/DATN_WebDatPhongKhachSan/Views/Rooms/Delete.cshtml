@model DATN_WebDatPhongKhachSan.Models.Room

@{
    ViewData["Title"] = "Xoá thông tin phòng";
    Layout = "~/Views/Shared/_layout_admin.cshtml";
}

<h3>Bạn có chắc muốn xoá thông tin phòng này không?</h3>
<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên tài khoản chủ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Owner.User.UserName)
        </dd class>
        <dt class = "col-sm-2">
            Mã phòng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomCode)
        </dd>
        <dt class = "col-sm-2">
            Giá
        </dt>
        <dd class = "col-sm-10">
            @Model.Price.ToString(("#,##0. VNĐ"))
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Detail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Detail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AmountRoom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AmountRoom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsActive == true)
            {
                <h6>Còn cho thuê</h6>
            }
            else
            {<h6>Tạm khoá</h6>}
        </dd>
        <dt class = "col-sm-2">
            Loại phòng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomType.RoomTypeName)
        </dd class>
        <dt class = "col-sm-2">
            Danh sách tiện ích
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TagID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:dd/MM/yyyy}", Model.CreatedOn)
        </dd>
        <dt class = "col-sm-2">
            Chỉnh sửa lần cuối
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:dd/MM/yyyy}", Model.ModifiedOn)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RoomID" />
        <input type="submit" value="Xoá" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại</a>
    </form>
</div>
