@model DATN_WebDatPhongKhachSan.Models.Room

@{
    ViewData["Title"] = "Thông tin phòng";
    Layout = "~/Views/Shared/_layout_admin.cshtml";
}

<h1>Thông tin phòng</h1>

<div>
    <h4>Phòng: @Model.RoomCode</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên tài khoản chủ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Owner.User.UserName)
        </dd>
        <dt class = "col-sm-2">
            Mã phòng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Model.Price.ToString(("#,##0. VNĐ"))
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Detail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Detail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AmountRoom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AmountRoom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsActive == true)
            {
                <h6>Còn cho thuê</h6>
            }
            else
            {<h6>Tạm khoá</h6>}
        </dd>
        <dt class = "col-sm-2">
            Loại phòng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomType.RoomTypeName)
        </dd>
        <dt class = "col-sm-2">
            Danh sách tiện ích
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TagID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:dd/MM/yyyy}", Model.CreatedOn)
        </dd>
        <dt class = "col-sm-2">
            Chỉnh sửa lần cuối
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:dd/MM/yyyy}", Model.ModifiedOn)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.RoomID">Chỉnh sửa</a> |
    <a asp-action="Index">Quay lại</a>
</div>
