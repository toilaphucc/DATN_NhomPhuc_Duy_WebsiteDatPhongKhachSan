                    <div class="productinfo text-center">
                        <img src="~/assets/images/@room.Image" width="200" height="200" alt="" style="border:2px" />
                        <h3><a style="color: #ee5057" asp-action="DanhSachPhongHome" asp-route-id="@room.RoomID" asp-controller="Rooms">@room.Name</a></h3>
                        <p>@room.Price</p>
                        <p style="margin-left:5px">@room.Detail</p>
                        <a asp- href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Đặt ngay</a>
                    </div>
                </div>
