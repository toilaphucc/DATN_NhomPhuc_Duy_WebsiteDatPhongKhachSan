@model DATN_WebDatPhongKhachSan.Models.RoomType

@{
    ViewData["Title"] = "Chi tiết loại phòng";
    Layout = "~/Views/Shared/_layout_admin.cshtml";
}

<h1>Chi tiết loại phòng</h1>

<div>
    <h4>RoomType</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomTypeName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomTypeName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Detail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Detail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
